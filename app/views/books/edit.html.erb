
    <h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |f| %>
      <h4>title</h4>
      <%= f.text_field :title %>
      <h4>body</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Update book' %>
    <% end %>
    <div>
      <%= link_to 'Show', book_path(@book.id) %><span>|</span>
      <%= link_to 'Back', books_path %>
    </div>


