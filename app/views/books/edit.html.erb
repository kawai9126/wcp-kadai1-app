    <h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
    <%= @book.errors.count %>error
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
    <% end %>
      <h4>title</h4>
      <%= f.text_field :title %>
      <h4>body</h4>
      <%= f.text_area :body %>
      <div>
        <%= f.submit 'Update Book' %>
      </div>
    <% end %>
    <div>
      <p>
        <%= link_to 'Show', book_path(@book.id) %>
        |
        <%= link_to 'Back', books_path %>
      </p>
    </div>




